<!DOCTYPE html>
<html lang="en">
  <head>
    <title><%= title %></title>
    <link rel="stylesheet" href="/public/styles/style.css" />
  </head>
  <body>
    <h1><%= title %></h1>
    <p>Welcome to <%= title %></p>
    <!-- Display authors -->
    <ul>
      <% authors.forEach(author => { %>
      <li><%= author.authorName %> - Bio: <%= author.authorBio %></li>
      <% }) %>
    </ul>

    <!-- Form to add a new author -->
    <h2>Add a New Author</h2>
    <form action="/authors" method="POST">
      <input
        type="text"
        name="authorName"
        placeholder="Author Name"
        required
      /><br />
      <textarea name="authorBio" placeholder="Author Bio" required></textarea
      ><br />
      <button type="submit">Add Author</button>
    </form>

    <!-- Link to other pages -->
    <br />
    <a href="/books-list">View Books</a>
    <a href="/categories-list">View Categories</a>
  </body>
</html>
