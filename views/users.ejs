<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>User</title>
  </head>
  <body>
    <h1>User</h1>

    <h2>Books List</h2>
    <ul>
      <% books.forEach(book => { %>
      <li>
        <%= book.bookName %> by <%= book.bookAuthor %>
        <a href="/users/edit-book/<%= book.id %>">Edit</a> |
        <form
          action="/users/delete-book/<%= book.id %>"
          method="POST"
          style="display: inline"
        >
          <button type="submit">Delete</button>
        </form>
      </li>
      <% }) %>
    </ul>

    <h3>Add New Book</h3>
    <form action="/users" method="POST">
      <label for="bookName">Book Name:</label>
      <input type="text" id="bookName" name="bookName" required /><br />
      <label for="bookAuthor">Book Author:</label>
      <input type="text" id="bookAuthor" name="bookAuthor" required /><br />
      <label for="bookPages">Number of Pages:</label>
      <input type="number" id="bookPages" name="bookPages" required /><br />
      <label for="bookPrice">Price:</label>
      <input type="number" id="bookPrice" name="bookPrice" required /><br />
      <button type="submit">Add Book</button>
    </form>
  </body>
</html>
